<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-striped table-condensed table-bordered">
        <thead class="thead-light">
          <tr>
            <th class="text-center">待辦事項</th>
            <th class="text-center">詳情</th>
            <th class="text-center">修改</th>
            <th class="text-center">刪除</th>
          </tr>
        </thead>
        <% @lists.each do |list| %>
            <tr>
              <td><%= list.name %></td>
              <td align="center"><%= link_to 'Show', list_path(list) %></td>
              <td align="center"><%= link_to 'Edit', edit_list_path(list) %></td>
              <% if list.due > Date.today %>
                  <td align="center"><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
              <% else %>
                  <td align="center">過期<i class="fa fa-exclamation" aria-hidden="true"></i></td>
              <% end %>
            </tr>
        <% end %>
      </table>

      <%= button_to 'New List', new_list_path, :class => "btn btn-primary btn-lg", :method => :get %>
    </div>
  </div>
</div>



