<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <table class="table table-striped table-condensed">
        <thead class="thead-light">
          <tr>
            <th scope="col"><span><i class="fa fa-hand-pointer-o" aria-hidden="true"></i></span></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @lists.each do |list| %>
            <tr>
              <td><%= list.name %></td>
              <td><%= link_to 'Show', list_path(list) %></td>
              <td><%= link_to 'Edit', edit_list_path(list) %></td>
              <% if list.due > Date.today %>
                  <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
              <% else %>
                  <td><%= link_to 'Outdated' %></td>
              <% end %>
            </tr>
        <% end %>
      </table>

      <%= link_to 'New List', new_list_path %>
    </div>
  </div>
</div>



